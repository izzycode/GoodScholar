<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email %> <!-- by changing text_field to email_field rails will double check accepted format-->
  </div>
  <div class="field">
    <%= f.label :code_school_id %><br>
    <%= f.select :code_school_id, 1..3 %>  <!-- by changing text_field to select type and giving it a range -->
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
